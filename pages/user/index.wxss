/* pages/user/index.wxss */

.container {
  bottom: 100rpx;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
}

.user-info-layout {
  background-color: #07c060;
  height: 180rpx;
  width: 100%;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.user-info-avatar {
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-info-name {
  font-size: 34rpx;
  color: #ffffff;
}

.login-layout{
  margin-top: 30rpx;
  background-color: #ffffff;
  width: 100%;
  height: 480rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.login-img {
  height: 200rpx;
  width: 200rpx;
}

.login-txt {
  margin-top: 10rpx;
  font-size: 34rpx;
}

.login-btn {
  margin-top: 40rpx;
  width: 680rpx;
}

.sign-layout {
  width: 100%;
  margin-top: 30rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

.search-layout {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.search-panel {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-right: 20rpx;
}

.search-icon-layout {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-img {
  width: 42rpx;
  height: 42rpx;
}

.search-text {
  padding-left: 20px;
  font-size: 30rpx;

}

.sign-list-layout {
  width: 100%;
  height: calc(100vh - 390rpx); 
}

.loading {
  padding-top: 50px;
  text-align: center;
}

.delete-layout {
  display: flex;
  width: 65px;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #ffffff;
  background-color: #c52e2e;
}
