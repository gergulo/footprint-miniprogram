/* pages/statistics/index.wxss */

.container {
  bottom: 100rpx;
}

.map {
  height: calc(100%);
  width: 100%;
}

/** 顶部消息 **/
.info-layout {
  width: 70%;
  height: 160rpx;
  position: absolute;
  top: 30rpx;
  left: 0;
  margin-left: 15%;
  border-radius: 5rpx;
}

.info-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0.9;
}

.info-panel {
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
}

.info-panel1 {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-text {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  text-align: center;
}

.info-num {
  font-weight: blod;
  color: #07c060;
}