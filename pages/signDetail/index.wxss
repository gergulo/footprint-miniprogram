/* .container {} */

.map {
  height: 100%;
  width: 100%;
}

/** 地址信息 **/
.addr-layout {
  width: 96%;
  height: 230rpx;
  position: absolute;
  bottom: 40rpx;
  left: 0;
  margin-left: 2%;
  border-radius: 5rpx;
  z-index: 2;
}

.info-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0.9;
}

.addr-panel {
  width: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  line-height: 50rpx;
  height: 50rpx;
}

.addr-info-panel {
  display: flex;
  flex-direction: column;
}


.info-text {
  flex: 1;
  font-size: 32rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.sub-text {
  font-size: 30rpx;
}

.addr-op-panel {
  display: flex;
  justify-content: flex-end;
}

.addr-op-btn {
  margin-right: 15rpx;
}

.remark-layout {
  width: 400rpx;
  height: 180rpx;
  display: flex;
  font-size: 28rpx;
  border-radius: 5rpx;
  padding: 15rpx;
  background-color: rgba(255, 255, 255, 0.8);
  z-index: 3;
  align-items: center;
}

.pic {
  height: 85%;
  width: 40%;
  margin-right: 15rpx;
}

.remark-text {
  height: 85%;
  width: 60%;
  font-size: 30rpx;
  display: block;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
}